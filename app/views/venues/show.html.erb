<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class='panel-title'>
          <%= @venue.name %>'s Upcoming Shows
        </h2>
      </div>
      <table class='table'>
        <tr>
          <th>
            Date
          </th>
          <th>
            Headliner
          </th>
          <th>
            Doors
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
          <th>
            Staffed?
          </th>
        </tr>
        <% @shows.each do |show| %>
            <% if !show.date.past? %>
              <%= render partial: 'shows/info', locals: {show: show} %>
            <% end %>
        <% end %>
      </table>

    </div>

  </div>
</div>
