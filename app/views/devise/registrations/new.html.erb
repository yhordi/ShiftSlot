<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <% if @org %>
          <h2>Sign up for <%= @org.name %></h2>
        <% else %>
          <h2>Sign up</h2>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if @org %>
        <%= hidden_field_tag :organization_id, @org.id %>
      <% end %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </div>

      <div class="">
        <%= recaptcha_tags %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
